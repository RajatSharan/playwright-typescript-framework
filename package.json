{
  "name": "playwright-typescript-framework",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:one": "npx playwright test tests/tests.spec.ts",
    "test:login": "npx playwright test src/tests/login.spec.ts",
    "test:data": "npx playwright test src/tests/testdataGenerator.spec.ts",
    "test:all": "npx playwright test src/tests",
    "report": "npx playwright show-report",
    "test:login:chrome": "npx playwright test src/tests/login.spec.ts --headed --project=chromium --reporter=html",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "npx allure open ./allure-report",
    "allure:login:report":"npx playwright test src/tests/login.spec.ts --reporter=allure-playwright"
  },
